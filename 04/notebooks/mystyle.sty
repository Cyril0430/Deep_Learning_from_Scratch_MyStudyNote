\newcommand{\ex}{\arabic{section}.\arabic{teigi}}
\newenvironment{example}{%%例のための枠
  \refstepcounter{teigi}  % カウンタを進める
  \begin{itembox}[l]{例 \ex}  %カウンタの表示
}{
  \end{itembox}
}

\newcounter{column} % カウンタのセット
\numberwithin{column}{section}  % セクション番号も反映させる
\newcommand{\COLUMN}{\arabic{section}.\arabic{column}}  % カウンタを表示するためのコマンドの定義
\newenvironment{column}[1]{%%コラムの環境
  \refstepcounter{column} % カウンタを進める
  \begin{tcolorbox}[
    colframe = blue,
    colback = white,
    title = コラム\COLUMN 「#1」,
    fonttitle = \bfseries,
    breakable = true
  ]
}{
  \end{tcolorbox}
}

